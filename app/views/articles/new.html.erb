<%
=begin
%>
<%= turbo_frame_tag @article do %>
  <div class="py-3 px-5 my-3 rounded-md border border-gray-200 shadow-md">
    <h2 class="font-bold text-2xl">New article</h2>

    <%= render "form", article: @article %>

    <%= link_to 'Back', new_article_path(button: true), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
<% end %>
<%
=end
%>

<%= form_with url: new_form_path, method: :get, local: true do %>
  <div>
    <label for="dynamic-select">Choose an option:</label>
    <select id="dynamic-select" name="option" data-turbo-frame="form_frame">
      <option value="">-- Select an option --</option>
      <option value="A">Option A</option>
      <option value="B">Option B</option>
    </select>
  </div>
<% end %>

<%= turbo_frame_tag "form_frame" do %>
  <!-- 初期状態 -->
  <p>Please select an option to see the form.</p>
<% end %>
